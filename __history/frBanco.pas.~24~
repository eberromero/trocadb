unit frBanco;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, IniFiles ;

type
  TfrmBanco = class(TForm)
    edServidor: TEdit;
    Label1: TLabel;
    edPath: TEdit;
    Label2: TLabel;
    btnGravar: TButton;
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormDestroy(Sender: TObject);
  private
    vIniBanco: TIniFile;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmBanco: TfrmBanco;

implementation

{$R *.dfm}

procedure TfrmBanco.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TfrmBanco.FormCreate(Sender: TObject);
begin
  if not FileExists(ChangeFileExt(Application.ExeName,'.ini')) then
  begin
    ShowMessage('O arquivo TrocaDB.ini não foi encontrado!');
    Exit;
  end;

  vIniBanco := TIniFile.Create(ChangeFileExt(Application.ExeName,'.ini'));

  edServidor.Text := vIniBanco.ReadString('SERVIDOR', 'NOMESERVIDOR', '');
  edPath.Text     := vIniBanco.ReadString('DIRETORIO', 'PATH', '');
end;

procedure TfrmBanco.FormDestroy(Sender: TObject);
begin
  vIniBanco.WriteString('SERVIDOR','NOMESERVIDOR',edServidor.Text);
  vIniBanco.WriteString('DIRETORIO','PATH'       ,edPath.Text);
  FreeAndNil(vIniBanco);
  Close;
end;

end.
